{
  "compilerOptions": {
    "module": "commonjs",                    
    "moduleResolution": "node",
    "lib": ["es2018"],
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/__mocks__/**/*.*"
  ]
}
